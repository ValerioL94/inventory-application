<%- contentFor('page') %>

<h2><%= title %>: <%= category.name %></h2>

<% if (category_products.length) { %>
<p><strong>Delete the following products before attempting to delete this category.</strong></p>
<div class="detail-list">
  <h3>Products</h3>
  <dl>
    <% category_products.forEach(product => { %>
    <dt>
      <a href="<%= product.url %>"><%= product.name %></a>
    </dt>
    <dd>
      <%= product.description %>
    </dd>
    <% }) %>
  </dl>
</div>
<% } else { %>
<p>Do you really want to delete this Category?</p>
<form method="post">
  <div class="form-group">
    <input type="hidden" id="categoryId" class="form-control" name="categoryId" value="<%= category._id %>">
  </div>
  <button type="submit" class="form-submit">Delete</button>
</form>
<% } %>